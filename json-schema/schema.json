{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stac-extensions.github.io/archive/v1.0.0/schema.json#",
  "title": "Archive Extension",
  "description": "STAC Archive Extension for STAC Items and STAC Collections.",
  "type": "object",
  "required": [
    "stac_extensions"
  ],
  "properties": {
    "stac_extensions": {
      "type": "array",
      "contains": {
        "const": "https://stac-extensions.github.io/archive/v1.0.0/schema.json"
      }
    }
  },
  "oneOf": [
    {
      "type": "object",
      "required": [
        "type",
        "assets"
      ],
      "properties": {
        "type": {
          "const": "Feature"
        },
        "assets": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/archive"
          }
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/archive"
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "const": "Collection"
        },
        "assets": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/archive"
          }
        },
        "item_assets": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/archive-item-assets"
          }
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/archive"
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "type",
        "links"
      ],
      "properties": {
        "type": {
          "const": "Catalog"
        },
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/archive"
          }
        }
      }
    }
  ],
  "definitions": {
    "archive": {
      "type": "object",
      "properties": {
        "archive": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "href"
            ],
            "allOf": [
              {
                "$ref": "#/definitions/archive-entry"
              },
              {
                "$ref": "#/definitions/archive"
              }
            ]
          }
        }
      }
    },
    "archive-item-assets": {
      "type": "object",
      "properties": {
        "archive": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "href"
            ],
            "allOf": [
              {
                "$ref": "#/definitions/archive-entry"
              },
              {
                "$ref": "#/definitions/archive-item-assets"
              }
            ]
          }
        }
      }
    },
    "archive-entry": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "format": "iri-reference",
          "minLength": 1
        },
        "type": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "range": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0
          },
          "minItems": 2,
          "maxItems": 2
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
